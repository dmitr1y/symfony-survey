{% extends '@App/layout.html.twig' %}


{% block body %}
    <h1>Poll</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poll.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ poll.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if poll.createdAt %}{{ poll.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ownerid</th>
                <td>{{ poll.ownerId }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
    {% for question in poll.questions %}
        <div class="col-md">
            <h3>{{ question.name }}</h3>
            <ul>
            {% for item in question.items %}
                <li>{{ item.text }}</li>
            {% endfor %}
            </ul>
        </div>
    {% endfor %}
    </div>

    <ul>
        <li>
            <a href="{{ path('poll_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('poll_edit', { 'id': poll.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
