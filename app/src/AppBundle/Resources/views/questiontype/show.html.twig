{% extends '@App/layout.html.twig' %}

{% block body %}
    <h1>Questiontype</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ questionType.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ questionType.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ questionType.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('test_type_index') }}">Back to the list</a>
